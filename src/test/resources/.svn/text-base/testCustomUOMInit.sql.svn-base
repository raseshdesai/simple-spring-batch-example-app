drop view DEV_SUPPLY_CHAIN_VW.CUSTOM_UOM_VW if exists;
drop table DEV_SUPPLY_CHAIN_VW.CUSTOM_UOM if exists;

CREATE TABLE DEV_SUPPLY_CHAIN_VW.CUSTOM_UOM
(
  FROM_UOM     VARCHAR(250),
  TO_UOM       VARCHAR(250),
  CONV_FCTR    DECIMAL (20,0),
  MOD_DT       DATE
);

CREATE VIEW DEV_SUPPLY_CHAIN_VW.CUSTOM_UOM_VW
(
   FROM_UOM,
   TO_UOM,
   CONVERSION_FACTOR,
   MOD_DT
)
AS
   SELECT   FROM_UOM,
            TO_UOM,
            CONV_FCTR,
            MOD_DT
     FROM   DEV_SUPPLY_CHAIN_VW.CUSTOM_UOM;


